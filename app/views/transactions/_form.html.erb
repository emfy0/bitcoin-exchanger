<%= javascript_pack_tag 'input_usdt_converter', 'data-turbolinks-track': 'reload' %>
<div class="col col-lg-6 mt-1">
  <% transaction.errors.full_messages.each do |message| %>
    <p class="mb-sm text-red"><%= message %></p>
  <% end %>

  <%= form_with model: transaction, data: { turbolinks: false } do |form| %>
    <b><%= form.label :you_send, t("transaction_form.send") %></b>
    <div class="input-group">
      <div class="col pe-0">
        <%= form.text_field :you_send, class: "form-control", value: 0,required: true %>
      </div>
      <span class="col-auto input-group-text">₮</span>
    </div>

    <b><%= form.label :get, t("transaction_form.get") %></b>
    <div class="input-group">
      <div class="col pe-0">
        <%= form.text_field :get, class: "form-control", value: 0, required: true %>
      </div>
       <span class="col-auto input-group-text">₿</span>
    </div>

    <b><%= form.label :recipient_address, t("transaction_form.recipient_address") %></b>
    <%= form.text_field :recipient_address, class: "form-control", required: true %>

    <b><%= form.label :email, t("transaction_form.email") %></b>
    <%= form.text_field :email, class: "form-control", required: true %>

    <div class="form-check mt-1">
      <%= form.check_box :terms, required: true, class: "form-check-input" %>
      <%= form.label :terms, t("transaction_form.terms"), class: "form-check-label" %>
    </div>

    <%= form.submit "Send", class: "btn btn-primary mt-2" %>
  <% end %>
</div>
